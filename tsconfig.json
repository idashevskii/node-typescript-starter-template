{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["node", "mocha"],
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2021",
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
